<%= form_for([@review, @feedback]) do |f| %>

  <div class="feedback-form-container">
    <section class="review-descriptions">
      <div id="accordion">
        <% @review.headings.each do |heading| %>
          <% if @review.is_comments_header(heading) %>
            <h3 class="comments-icon" data-heading-title="comments"><%= @review.heading_title(heading) %></h3>
            <div class="comments-description"></div>
            <% next %>
          <% end %>
          <h3 data-heading-title="<%= @review.prepare_heading_html_attribute(heading)%>"><%= @review.heading_title(heading) %></h3>
          <div>
            <%= raw @review.description(heading) %>
          </div>
        <% end %>
      </div>
    </section>
    <section class="feedback-form">
      <% @review.headings.each do |heading| %>
        <section id="<%= @review.prepare_heading_html_attribute(heading) %>">

        <% if(@review.is_comments_header(heading)) %>
          <div class="field">
            <%= f.label 'project_worked_on_required', t('feedback.project_worked_on') %>
            <%= f.text_field :project_worked_on_ %>
          </div>

          <div class="field">
            <%= f.label 'role_description_required', t('feedback.role_description') %>
            <%= f.text_field :role_description %>
          </div>

          <div class="field">
            <div class="ideaListHeader comments-label"><b><%= t('feedback.fast_feedback') %></b></div>
            <%= f.label t('feedback.share_thoughts') %>
            <%= f.text_area :comments %>
          </div>
        <% end %>

        <% @review.fields_for_heading(heading).each do |field| %>
          <% next if(@review.is_comments_header(heading)) %>
          <div class="field">
            <%= f.label field %>
            <%= f.text_area field %>
          </div>
        <% end %>
        </section>
      <% end %>
      <div class="actions">
        <%= f.submit 'Save', { :id => "save-feedback-button" } %>
        <%= f.submit 'Preview & Submit', {:class => "success", :id => "preview-and-submit-button", :name => "preview_and_submit_button"} %>

        <% if edit_page %>
          <%= link_to "Delete", review_feedback_url(@review, @feedback), method: 'delete', class: "danger button pull-right", :id => "delete-button", :confirm => "Are you sure you want to delete this feedback? You will lose all progress you have made."  %>
        <% end %>
      </div>
    </section>
  </div>
<% end %>
