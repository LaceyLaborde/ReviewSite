<table class="invitations_received">
  <thead>
    <th>Reviewee</th>
    <th>Review Type</th>
    <th>Invite Received</th>
    <th>Feedback Deadline</th>
    <th>Status</th>
    <th>Action</th>
  </thead>
  <tbody>
    <% @invitations_received.each do |invitation| %>
      <tr>
        <td><%= invitation.review.junior_consultant %></td>
        <td><%= invitation.review.review_type %></td>
        <td><%= invitation.sent_date %></td>
        <td><%= invitation.review.feedback_deadline %></td>

        <% if invitation.feedback.nil? %>
          <td>Not Started</td>
          <td><%= link_to "Create", new_review_feedback_path(invitation.review) %></td>
        <% elsif invitation.feedback.submitted? %>
          <td>Submitted</td>
          <td><%= link_to "View", review_feedback_path(invitation.review, invitation.feedback) %></td>
        <% else %>
          <td>Not Submitted</td>
          <td><%= link_to "Continue", edit_review_feedback_path(invitation.review, invitation.feedback) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br class="spacer" />
<br class="spacer" />
<br class="spacer" />
<script>
    $('.invitations_received').dataTable({
        "bPaginate": false,
        "bLengthChange": false,
        "bFilter": false,
        "bInfo": false
    });
</script>
