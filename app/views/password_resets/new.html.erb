<% provide :title, 'Request Password Reset' %>
<h1>Reset Password</h1>

<section class="form-container">
<%= form_tag password_resets_path, method: :post do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="actions"><%= submit_tag "Request Password Reset", class: "btn btn-info" %></div>
<% end %>
</section>
