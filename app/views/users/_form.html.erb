<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>


  <div class="field">
  <% if signed_in? and current_user.admin? %>
    <%= f.label :cas_name %><br />
    <% peekaboo = '' %>
    <% if @user %>
      <% value = @user.cas_name %>
    <% else %>
      <% value = '' %>
    <% end %>
  <% else %> 
    <% peekaboo = 'hidden' %>
    <% value = current_cas_name %>
  <% end %>

    <%= f.text_field :cas_name, value: value, type: peekaboo %>
  </div>

  <div class="actions">
    <%= f.submit "#{button_title}" %>
  </div>
<% end %>
