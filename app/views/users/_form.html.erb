<%= nested_form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <% if signed_in? and current_user.admin? %>
      <%= f.label :okta_name %><br />
      <%= f.text_field :okta_name, value: @user.nil? ? "" : @user.okta_name %>
    <% else %> 
      <%= f.hidden_field :okta_name, value: current_okta_name %>
    <% end %>
  </div>


  <div class="field">
    <%= check_box_tag 'isjc' %> <b>This user is a Junior Consultant</b>
  </div>

  <%= f.fields_for :junior_consultants %>

  <div class="actions">
    <%= f.submit "#{button_title}" %>
  </div>
<% end %>
