<% if current_user == @user %>
  <h1>Update Your Profile</h1>
  <% cancel_link = root_path %>
  <% form = 'form' %>
<% else %>
  <h1>Edit User</h1>
  <h2><%= @user %></h2>
  <% cancel_link = users_path %>
  <% form = 'admin_form' %>
<% end %>

<%= render :partial => form, :locals => {
  :button_title => 'Save Changes',
  :cancel_link => cancel_link } %>
